<UserControl x:Class="RecordView.MessageText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="26" d:DesignWidth="400">
	<UserControl.Resources>
		<Storyboard x:Key="MessageShow">
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(TextElement.Foreground).(Brush.Opacity)" Storyboard.TargetName="textBoxMessage">
				<EasingDoubleKeyFrame KeyTime="0:0:3" Value="1"/>
				<EasingDoubleKeyFrame KeyTime="0:0:3.5" Value="0"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
	</UserControl.Resources>
	<UserControl.Triggers>
		<EventTrigger RoutedEvent="TextBoxBase.TextChanged" SourceName="textBoxMessage">
			<BeginStoryboard x:Name="MessageShow_BeginStoryboard1" Storyboard="{StaticResource MessageShow}"/>
		</EventTrigger>
	</UserControl.Triggers>
    <Grid>
        <TextBox Name="textBoxMessage" Text="" VerticalAlignment="Center" IsTabStop="False" IsReadOnly="True" BorderBrush="{x:Null}" Background="{x:Null}" IsEnabled="False" IsUndoEnabled="False" BorderThickness="0" />
    </Grid>
</UserControl>
