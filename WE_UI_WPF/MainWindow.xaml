<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	x:Class="DVR_UI_WPF.MainWindow"
	x:Name="Window"
	Title="MainWindow"
	Width="800" Height="600" WindowStyle="None" AllowsTransparency="True" Background="{x:Null}" xmlns:my="clr-namespace:DVR_UI_WPF" Loaded="Window_Loaded" Icon="/DVR_UI_WPF;component/images/USBIcon.png">
    <Border BorderThickness="2" MouseLeftButtonDown="LayoutRoot_MouseLeftButtonDown" BorderBrush="#FF3399FF">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White" Offset="0.361" />
                <GradientStop Color="#FFC3E5FF" Offset="0" />
                <GradientStop Color="#FFEAF4FF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid x:Name="LayoutRoot" >
			<Grid.RowDefinitions>
				<RowDefinition Height="50"/>
				<RowDefinition Height="25"/>
				<RowDefinition Height="Auto"/>
                <RowDefinition Height="479*" />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>
            <ScrollViewer Grid.Row="3" Name="scrollViewer_WrapPanel" VerticalScrollBarVisibility="Hidden" HorizontalAlignment="Left" Width="186" >
                <WrapPanel   Name="wrapPanel_DeviceList" TouchMove="wrapPanel_DeviceList_TouchMove" MouseWheel="wrapPanel_DeviceList_MouseWheel" >

                </WrapPanel>
            </ScrollViewer>
            <Button Content="-" Height="29" Margin="0,0,6,0" Name="button_min" VerticalAlignment="Top" HorizontalAlignment="Right" Width="50" FontWeight="Bold" FontSize="18" FontStyle="Normal" Click="button_min_Click" IsTabStop="False" Background="White" Opacity="0.8" MouseEnter="button_min_MouseEnter" MouseLeave="button_min_MouseLeave" BorderBrush="{x:Null}" IsEnabled="True" Padding="0" BorderThickness="0" Focusable="False" />
            <Button Background="White" BorderBrush="{x:Null}" BorderThickness="0" Content="Test" Focusable="False" FontSize="18" FontStyle="Normal" FontWeight="Bold" Height="29" HorizontalAlignment="Right" IsEnabled="True" IsTabStop="False" Margin="0,0,62,0" Name="button_test" Opacity="0.8" Padding="0" VerticalAlignment="Top" Width="50" Click="button_test_Click" />
            <Image Height="50" HorizontalAlignment="Left" Margin="18,0,0,0" Name="image1" Stretch="Uniform" VerticalAlignment="Top" Width="83" Source="/DVR_UI_WPF;component/images/welltra.PNG" />
        </Grid>
	</Border>
</Window>